<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".view.questions.OneSelectionQuestionFragment">


        <TextView
            android:id="@+id/textView11"
            android:layout_width="168dp"
            android:layout_height="31dp"
            android:layout_marginTop="4dp"
            android:text="Klausimo vertÄ—: "
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonSkipOneSelQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="250dp"
            android:text="Praleisti"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toEndOf="@+id/buttonSubmitOneSelQuestion" />

        <ImageView
            android:id="@+id/imageViewDisplayImage"
            android:layout_width="122dp"
            android:layout_height="141dp"
            android:layout_marginTop="176dp"
            android:src="@drawable/placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.804"
            app:layout_constraintStart_toEndOf="@+id/radioGroupOneSelQuestion"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:src="@drawable/moneta"
            app:layout_constraintStart_toEndOf="@+id/textViewCoinsOneSelQuestion"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonSubmitOneSelQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="268dp"
            android:text="Pateikti"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewExperienceOneSelQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:text="55"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewQuestionDescriptionCorrectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:padding="20dp"
            android:text="Klausimo tekstas"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        <RadioGroup
            android:id="@+id/radioGroupOneSelQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewQuestionDescriptionCorrectAnswer">

            <RadioButton
                android:id="@+id/radio_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pirmas"
                android:textColor="@color/white"
                app:buttonTint="@color/white" />

            <RadioButton
                android:id="@+id/radio_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Antras"
                android:textColor="@color/white"
                app:buttonTint="@color/white"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="183dp" />

            <RadioButton
                android:id="@+id/radio_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:text="Trecias"
                android:textColor="@color/white"
                app:buttonTint="@color/white"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="251dp" />

            <RadioButton
                android:id="@+id/radio_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:text="Ketvirtas"
                android:textColor="@color/white"
                app:buttonTint="@color/white"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="312dp" />

        </RadioGroup>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/diamond"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toEndOf="@+id/textViewExperienceOneSelQuestion"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewCoinsOneSelQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>