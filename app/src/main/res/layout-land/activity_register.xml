<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.mastercoding.bakalaurinis.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".view.main.RegisterActivity">

        <TextView
            android:id="@+id/textView_register_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Registruotis"
            android:textColor="#673AB7"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_text_register_username"
            android:layout_width="198dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="slapyvardis"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.223"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView_register_page" />

        <EditText
            android:id="@+id/edit_text_register_password"
            android:layout_width="198dp"
            android:layout_height="42dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="slaptažodis"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_register_username" />

        <EditText
            android:id="@+id/edit_text_register_retype_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="patvirtinti slaptažodį"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_register_password" />

        <Button
            android:id="@+id/button_register_register"
            android:layout_width="178dp"
            android:layout_height="65dp"
            android:layout_marginStart="170dp"
            android:layout_marginBottom="25dp"
            android:text="@string/register_btn"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_register_retype_password"
            app:layout_constraintVertical_bias="0.758" />

        <Button
            android:id="@+id/button_register_back"
            android:layout_width="178dp"
            android:layout_height="65dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="25dp"
            android:text="Atgal"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_register_register" />

        <ImageView
            android:id="@+id/register_monster"
            android:layout_width="0dp"
            android:layout_height="277dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="289dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edit_text_register_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.402"
            app:srcCompat="@drawable/monster_register" />

        <ImageView
            android:id="@+id/info_password"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="152dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/edit_text_register_password"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <ImageView
            android:id="@+id/info_password_repeat"
            android:layout_width="38dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/edit_text_register_retype_password"
            app:layout_constraintTop_toBottomOf="@+id/info_password"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="137dp"
            android:layout_height="179dp"
            android:layout_marginStart="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.474"
            app:srcCompat="@drawable/monster_register" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/info_password"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/jelly_register" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>