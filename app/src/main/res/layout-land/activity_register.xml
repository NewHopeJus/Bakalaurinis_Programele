<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.mastercoding.bakalaurinis.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".view.main.RegisterActivity">

        <TextView
            android:id="@+id/textView_register_page"
            android:layout_width="382dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Registruotis"
            android:textColor="#673AB7"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_text_register_email"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="el. paštas"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/register_monster"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_register_username" />

        <EditText
            android:id="@+id/edit_text_register_username"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="vardas"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/register_monster"
            app:layout_constraintTop_toBottomOf="@+id/textView_register_page" />

        <EditText
            android:id="@+id/edit_text_register_password"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="88dp"
            android:ems="10"
            android:hint="slaptažodis"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_register_page" />

        <EditText
            android:id="@+id/edit_text_register_retype_password"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="patvirtinti slaptažodį"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/button_register_back"
            app:layout_constraintStart_toEndOf="@+id/edit_text_register_email"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_register_password"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_register_register"
            android:layout_width="178dp"
            android:layout_height="65dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="36dp"
            android:text="@string/register_btn"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/register_monster"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_register_email"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_register_back"
            android:layout_width="178dp"
            android:layout_height="65dp"
            android:layout_marginTop="52dp"
            android:text="Atgal"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            app:layout_constraintStart_toEndOf="@+id/button_register_register"
            app:layout_constraintTop_toBottomOf="@+id/info_password_repeat"
            app:layout_constraintVertical_bias="0.013" />

        <ImageView
            android:id="@+id/register_monster"
            android:layout_width="0dp"
            android:layout_height="277dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="289dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edit_text_register_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.402"
            app:srcCompat="@drawable/monster_register" />

        <ImageView
            android:id="@+id/info_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/edit_text_register_password"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <ImageView
            android:id="@+id/info_password_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/edit_text_register_retype_password"
            app:layout_constraintTop_toBottomOf="@+id/info_password"
            app:layout_constraintVertical_bias="0.162"
            app:srcCompat="@android:drawable/ic_menu_info_details" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>