<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_monster_kill">

    <TextView
        android:id="@+id/textViewOpeningKingdom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/message_opened_kingdom"
        android:textColor="#673AB7"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFirework2" />

    <ImageView
        android:id="@+id/imageViewMonsterKilled"
        android:layout_width="357dp"
        android:layout_height="332dp"
        android:background="@drawable/die"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpeningKingdom" />

    <Button
        android:id="@+id/buttonTestiMonsterKilled"
        android:layout_width="146dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="@string/t_sti"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMonsterKilled"
        app:layout_constraintVertical_bias="0.878" />

    <ImageView
        android:id="@+id/imageViewStar"
        android:layout_width="156dp"
        android:layout_height="112dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewOpeningKingdom"
        app:layout_constraintEnd_toStartOf="@+id/imageViewFirework2"
        app:layout_constraintStart_toEndOf="@+id/imageViewFirework1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/star_smiling_1" />

    <ImageView
        android:id="@+id/imageViewFirework1"
        android:layout_width="132dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/firework_kingdom_opened" />

    <ImageView
        android:id="@+id/imageViewFirework2"
        android:layout_width="132dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/firework_kingdom_opened" />

</androidx.constraintlayout.widget.ConstraintLayout>